baseURL: https://{{ cl_network_name }}.{{ domain }}
languageCode: en-us
title: {{ cl_network_name }}
theme: PaperMod
domain: ethpandaops.io

markup:
  highlight:
    # anchorLineNos: true
    codeFences: true
    guessSyntax: true
    lineNos: false
    # noClasses: false
    style: monokai

params:
  disableThemeToggle: true
  defaultTheme: dark
  ethereum:
    beaconexplorerUrl: https://beaconchain.{{ cl_network_name }}.{{ domain }}
    #ethstatsUrl: https://ethstats.{{ cl_network_name }}.{{ domain }}
    faucetUrl: https://faucet.{{ cl_network_name }}.{{ domain }}
    forkmonUrl: https://forkmon.{{ cl_network_name }}.{{ domain }}
    rpcUrl: https://rpc.{{ cl_network_name }}.{{ domain }}
    explorerUrl: https://beaconchain.{{ cl_network_name }}.{{ domain }}
    chainName: "{{cl_network_name}}"
    chainId: "{{chainID}}"
  metamask:
    enabled: true

  links:
  - name: "Beaconchain explorer (soon!)"
    dataLookup: beaconexplorerUrl
  - name: "Transaction explorer (soon!)"
    dataLookup: explorerUrl
#  - name: "Ethstats"
#    dataLookup: ethstatsUrl
  - name: "Faucet (available post genesis)"
    dataLookup: faucetUrl
  - name: "Forkmon"
    dataLookup: forkmonUrl
  - name: "JSON RPC"
    dataLookup: rpcUrl

  #additionalLinks:
  # - name: "Launchpad (available post genesis)"
  #   url: "https://{{ cl_network_name }}.launchpad.ethereum.org"

menu:
  main:
    - identifier: ethereum-website
      name: ethereum.org
      url: https://ethereum.org
      weight: 30

disableKinds: ["taxonomy", "taxonomyTerm"]

copyright: "Long live the verge."

