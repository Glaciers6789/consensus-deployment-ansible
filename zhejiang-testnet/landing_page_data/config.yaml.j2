baseURL: https://zhejiang-testnet.ethpandaops.io
languageCode: en-us
title: {{ cl_network_name }}
theme: PaperMod

markup:
  highlight:
    # anchorLineNos: true
    codeFences: true
    guessSyntax: true
    lineNos: false
    # noClasses: false
    style: monokai

params:
  disableThemeToggle: true
  defaultTheme: dark
  ethereum:
    beaconexplorerUrl: https://beaconchain.zhejiang-testnet.ethpandaops.io
    #ethstatsUrl: https://ethstats.zhejiang-testnet.ethpandaops.io
    faucetUrl: https://faucet.zhejiang-testnet.ethpandaops.io
    forkmonUrl: https://forkmon.zhejiang-testnet.ethpandaops.io
    rpcUrl: https://rpc.zhejiang-testnet.ethpandaops.io
    explorerUrl: https://beaconchain.zhejiang-testnet.ethpandaops.io
    chainName: "{{cl_network_name}}"
    chainId: "{{chainID}}"
  metamask:
    enabled: true

  links:
  - name: "Beaconchain explorer"
    dataLookup: beaconexplorerUrl
  - name: "Transaction explorer"
    dataLookup: explorerUrl
#  - name: "Ethstats"
#    dataLookup: ethstatsUrl
  - name: "Faucet"
    dataLookup: faucetUrl
  - name: "Forkmon"
    dataLookup: forkmonUrl
  - name: "JSON RPC"
    dataLookup: rpcUrl

  additionalLinks:
   - name: "Launchpad"
     url: "https://zhejiang.launchpad.ethereum.org"

menu:
  main:
    - identifier: ethereum-website
      name: ethereum.org
      url: https://ethereum.org
      weight: 30

disableKinds: ["taxonomy", "taxonomyTerm"]

copyright: "Long live the verge."

