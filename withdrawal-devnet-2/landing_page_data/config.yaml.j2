    forkmonUrl: https://forkmon.withdrawalsdevnet2.ethpandaops.io
    rpcUrl: https://rpc.withdrawalsdevnet2.ethpandaops.io
    explorerUrl: https://explorer.withdrawalsdevnet2.ethpandaops.io
    chainName: "{{cl_network_name}}"
    chainId: "{{chainID}}"
  metamask:
    enabled: true

  links:
  - name: "Beaconchain explorer"
    dataLookup: beaconexplorerUrl
  - name: "Transaction explorer"
    dataLookup: explorerUrl
#  - name: "Ethstats"
#    dataLookup: ethstatsUrl
#  - name: "Consensus monitor"
#    dataLookup: consensusmonitorUrl
  - name: "Faucet"
    dataLookup: faucetUrl
  - name: "Forkmon"
    dataLookup: forkmonUrl
  - name: "JSON RPC"
    dataLookup: rpcUrl

  # additionalLinks:
  # - name: "Launchpad"
